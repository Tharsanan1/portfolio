---
import skills from '../data/skills.json';

const iconPaths: Record<string, string> = {
  code: '<polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/>',
  cloud: '<path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"/>',
  database: '<ellipse cx="12" cy="5" rx="9" ry="3"/><path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/><path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/>',
  layers: '<polygon points="12 2 2 7 12 12 22 7 12 2"/><polyline points="2 17 12 22 22 17"/><polyline points="2 12 12 17 22 12"/>',
};
---

<section id="skills" class="py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 animate-on-scroll">
      <h2 class="text-3xl sm:text-4xl font-bold text-[var(--text-primary)] mb-4">Technical Skills</h2>
      <div class="w-20 h-1 bg-[var(--accent)] mx-auto rounded-full"></div>
      <p class="mt-4 text-[var(--text-secondary)] max-w-2xl mx-auto">
        Technologies and tools I use to bring ideas to life
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {skills.categories.map((category, index) => (
        <div
          class="group p-6 bg-[var(--bg-secondary)] rounded-xl border border-[var(--border)] hover:border-[var(--accent)] transition-all duration-300 hover:shadow-lg hover:shadow-[var(--accent)]/10 animate-on-scroll"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Category Icon -->
          <div class="w-12 h-12 mb-4 rounded-lg bg-[var(--accent)]/10 flex items-center justify-center group-hover:bg-[var(--accent)] transition-colors">
            <svg
              class="w-6 h-6 text-[var(--accent)] group-hover:text-white transition-colors"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              viewBox="0 0 24 24"
              set:html={iconPaths[category.icon]}
            />
          </div>

          <!-- Category Name -->
          <h3 class="text-lg font-semibold text-[var(--text-primary)] mb-3">
            {category.name}
          </h3>

          <!-- Skills List -->
          <div class="flex flex-wrap gap-2">
            {category.skills.map(skill => (
              <span class="px-3 py-1 text-sm bg-[var(--bg-tertiary)] text-[var(--text-secondary)] rounded-full hover:bg-[var(--accent)] hover:text-white transition-colors cursor-default">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
